{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": ["dist/**", "azure_functions/**", "jest.config.js"],
  "rules": {
    "eqeqeq": "warn",
    "strict": "off",
    "quotes": [
      "error",
      "single"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      4
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "@typescript-eslint/no-explicit-any": "off"
  }
}
